<Page x:Class="Structurio.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Structurio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage"
      Background="#FFFFFFFF">

    <Grid>
        <StackPanel Width="320" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Registrieren" FontSize="26" FontWeight="SemiBold" Margin="0,0,0,30"/>

            <TextBlock Text="Vorname" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <TextBox x:Name="firstNameBox" Height="34" FontSize="14" Padding="10,6" TextChanged="firstNameBox_TextChanged" />
            <TextBlock x:Name="firstNameInfo" Text="* erforderlich" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="Nachname" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <TextBox x:Name="lastNameBox" Height="34" FontSize="14"  Padding="10,6" TextChanged="lastNameBox_TextChanged"/>
            <TextBlock x:Name="lastNameInfo" Text="* erforderlich" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="Geburtsdatum" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <DatePicker x:Name="birthDatePicker" Height="34" Margin="0,0,0,2" SelectedDateChanged="birthDatePicker_SelectedDateChanged"/>
            <TextBlock x:Name="birthDateInfo" Text="* erforderlich" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="E-Mail" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <TextBox x:Name="emailBox" Height="34" FontSize="14" Padding="10,6" TextChanged="emailBox_TextChanged"/>
            <TextBlock x:Name="emailInfo" Text="* erforderlich" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="Passwort" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <Grid Height="34" Margin="0,0,0,2">
                <TextBox x:Name="passwordTextBox" FontSize="14" Padding="10,6,34,6" BorderBrush="#CCC" BorderThickness="1" VerticalContentAlignment="Center" Visibility="Collapsed" ContextMenu="{x:Null}"/>
                <PasswordBox x:Name="passwordBox" FontSize="14" Padding="10,6,34,6" BorderBrush="#CCC" BorderThickness="1" VerticalContentAlignment="Center" Visibility="Visible" ContextMenu="{x:Null}" PasswordChanged="passwordBox_PasswordChanged"/>

                <Button x:Name="togglePasswordButton" Width="34" Height="34" Background="Transparent" BorderThickness="0" Margin="0,0,4,0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="TogglePasswordVisibility_Click">
                    <Image x:Name="eyeImage" Width="16" Height="16" Source="/Assets/login_eye_open.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
                </Button>
            </Grid>

            <TextBlock x:Name="passwordInfo" Text="* erforderlich" FontSize="11" Foreground="Gray" Margin="0,0,0,16"/>
            <Button Height="38" Content="Registrieren" Foreground="White" FontWeight="SemiBold" Margin="0,10" Click="register_Click"/>

            <TextBlock Foreground="Gray" HorizontalAlignment="Center">
                Bereits registriert?
                <Hyperlink Click="GoToSignInPage_Click">
                    Anmelden
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
    
</Page>