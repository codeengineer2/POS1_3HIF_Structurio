<Page x:Class="Structurio.Pages.PasswordResetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Structurio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordResetPage"
      Background="#FFFFFFFF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Content="← Zurück" Click="back_Click"/>

        <StackPanel Grid.Row="1" Width="320" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Passwort zurücksetzen"/>
            
            <TextBlock>
                <Run Text="Gib deine registrierte E-Mail-Adresse ein."/>
                <LineBreak/>
                <Run Text="Wir senden dir anschließend einen Link"/>
                <LineBreak/>
                <Run Text="zum Zurücksetzen des Passworts."/>
            </TextBlock>

            <TextBlock Text="E-Mail"/>
            <TextBox x:Name="emailBox" TextChanged="emailBox_TextChanged"/>
            <TextBlock x:Name="emailInfo" Text="* erforderlich"/>

            <Button Content="Link senden" Click="send_Click"/>
        </StackPanel>
    </Grid>
</Page>