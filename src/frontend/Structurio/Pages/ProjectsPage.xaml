<Page x:Class="Structurio.Pages.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Structurio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectsPage">

    <DockPanel Margin="20">
        <Grid DockPanel.Dock="Top" Width="300" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBox x:Name="searchBox" Width="300" Height="32" FontSize="14" Background="White" Foreground="Black" Padding="6,4" VerticalContentAlignment="Center" TextChanged="searchBox_TextChanged"/>

            <TextBlock x:Name="placeholderText" Text="🔍 Projekt suchen..." FontSize="14" Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Visibility="Visible" IsHitTestVisible="False"/>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="projectsWrapPanel" Margin="10"/>
        </ScrollViewer>
    </DockPanel>
</Page>