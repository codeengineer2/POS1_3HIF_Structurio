<UserControl x:Class="Structurio.Controls.FileBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Structurio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             Height="200" Width="200">

    <Border x:Name="outerBorder" Background="White" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Margin="8" Cursor="Hand" MouseLeftButtonUp="FileBox_Click" MouseEnter="FileBox_MouseEnter" MouseLeave="FileBox_MouseLeave">
        <Grid Margin="10"/>
    </Border>

</UserControl>