<UserControl x:Class="Structurio.Controls.FileBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Structurio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             Height="200" Width="200"
             Margin="10">
    
    <Border x:Name="outerBorder" Background="White" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Margin="8" Cursor="Hand" MouseLeftButtonUp="FileBox_Click">
        <StackPanel>
            <Border x:Name="imageContainer" Height="200" Background="#EEE" CornerRadius="6" Margin="8">
                <Image x:Name="previewImage" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
            </Border>

            <TextBlock x:Name="fileNameText" Text="Dateiname.pdf" Width="110" Height="30" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-5,0,0" TextAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
        </StackPanel>
    </Border>

</UserControl>