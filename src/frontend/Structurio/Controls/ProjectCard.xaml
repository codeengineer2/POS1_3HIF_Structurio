<UserControl x:Class="Structurio.Controls.ProjectCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Structurio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="320">

    <Border x:Name="outerBorder" Background="White" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Margin="8" Cursor="Hand" MouseLeftButtonUp="ProjectCard_Click" MouseEnter="ProjectCard_MouseEnter" MouseLeave="ProjectCard_MouseLeave">

        <Grid Margin="10,10,15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Width="60" Height="60" Background="{Binding Color}" CornerRadius="8" Padding="5" VerticalAlignment="Top" Margin="0,0,12,0">
                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            </Border>

            <TextBlock Grid.Column="1" Text="{Binding Description}" FontSize="12" Foreground="Black" VerticalAlignment="Top" Margin="-5,23,0,0" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
        </Grid>
    </Border>

</UserControl>