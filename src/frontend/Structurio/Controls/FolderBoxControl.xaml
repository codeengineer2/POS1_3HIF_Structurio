<UserControl x:Class="Structurio.Controls.FolderBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Structurio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="320"
             Height="140" Width="320">

    <Border x:Name="outerBorder" Background="White" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Margin="8" Cursor="Hand" MouseLeftButtonUp="FolderBox_Click" MouseEnter="FolderBox_MouseEnter" MouseLeave="FolderBox_MouseLeave">
        <Grid Margin="10">
            <TextBlock x:Name="titleText" Foreground="Black" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
        </Grid>
    </Border>

</UserControl>