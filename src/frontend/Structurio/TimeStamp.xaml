<Page x:Class="Structurio.TimeStamp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Structurio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimeStamp">
    
    <Grid Background="white">
        
        <Button Content="CheckIN" HorizontalAlignment="Left" Margin="170,150,0,0" VerticalAlignment="Top" Height="29" Width="74" Click="Checking"/>
        <Button Content="CheckOUT" HorizontalAlignment="Right" Margin="0,150,177,0" VerticalAlignment="Top" Height="29" Width="83" Click="Checkout"/>
            <ListView x:Name="times" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="150,220,150,14" Height="150" SelectionChanged="changed_clicktime" Background="AliceBlue" Padding="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="CheckIN" Width="150" x:Name="Checkin" DisplayMemberBinding="{Binding CheckIN}"/>
                        <GridViewColumn Header="CheckOUT" Width="150" DisplayMemberBinding="{Binding CheckOUT}"/>
                        <GridViewColumn Header="Duration" Width="90" DisplayMemberBinding="{Binding Duration}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        
        <TextBlock HorizontalAlignment="Left" Margin="320,150,0,0" TextWrapping="Wrap" FontSize="20" Text="Hello Maximilian" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="354,24,0,0" TextWrapping="Wrap" Text="TimeStamp" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="677,213,0,0" VerticalAlignment="Top" Height="33" Width="69" Click="Dataändern"/>

    </Grid>
</Page>
